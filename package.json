{
  "name": "vite-mpa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && npm run build:sw && vite build",
    "preview": "vite preview",
    "eslint": "npx eslint",
    "lint": "npx oxlint && npx eslint",
    "oxlint": "npx oxlint",
    "generate-cf-types": "npx wrangler types ./cloudflare/env.d.ts --config ./wrangler.jsonc",
    "test": "vitest --config ./vitest.config.ts",
    "integration-test": "vitest run --coverage --config ./vitest.config.browser.ts",
    "test-coverage": "vitest --coverage --config ./vitest.config.ts",
    "build:sw": "tsc --project sw/tsconfig.json --outDir compiled-sw",
    "clean-install": "node -e \"const fs = require('fs'); fs.rmSync('node_modules', { recursive: true, force: true }); fs.rmSync('package-lock.json', { force: true });\" && npm install",
		"update-packages": "ncu -u && npm install"
  },
  "devDependencies": {
		"@cloudflare/vite-plugin": "^1.1.0",
		"@cloudflare/vitest-pool-workers": "^0.8.25",
		"@cloudflare/workers-types": "^4.20250506.0",
		"@eslint/css": "^0.7.0",
		"@eslint/js": "^9.26.0",
		"@types/glob": "^8.1.0",
		"@types/wait-on": "^5.3.4",
		"@vitest/browser": "^3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"cheerio": "1.0.0",
		"eslint": "^9.26.0",
		"eslint-plugin-oxlint": "^0.16.9",
		"get-port": "^7.1.0",
		"glob": "^11.0.2",
		"globals": "^16.0.0",
		"jiti": "^2.4.2",
		"npm-check-updates": "^18.0.1",
		"oxlint": "^0.16.9",
		"playwright": "^1.52.0",
		"tree-kill": "^1.2.2",
		"tsconfigurator": "^2.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.0",
		"vite": "^6.3.5",
		"vitest": "^3.1.3",
		"wait-on": "^8.0.3",
		"wrangler": "^4.14.1"
  }
}
